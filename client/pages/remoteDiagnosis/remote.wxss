/* client/pages/remoteDiagnosis/remote.wxss */
.remote-function{
  margin-left:auto;
  margin-right:auto;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  height: 350rpx;
  width: 350rpx;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  /* border-left: none;
  border-right: none; */
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.remote-text {
  text-align: center;
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
}

button::after{
  border: none;
}

button{
  background-color: #fff;
  border-radius:0;
}

.remote{
  margin-top: 50rpx;
  display: grid;
  grid-template-columns: 1fr;
}